{% extends 'base.html.twig' %}

{% block title %}Inscription{% endblock %}

{% block body %}
<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-sm">
                <div class="card-header bg-primary text-white text-center py-3">
                    <h2 class="mb-0">Créer un compte</h2>
                </div>
                <div class="card-body p-4">

                    {% for message in app.flashes('success') %}
                        <div class="alert alert-success">
                            {{ message }}
                        </div>
                    {% endfor %}

                    {{ form_start(form, {
                        attr: {
                            'class': 'needs-validation',
                            'data-turbo': true,
                            'data-turbo-frame': '_top'
                        }
                    }) }}

                    <div class="row mb-3">
                        <div class="col-md-6">
                            <div class="form-group">
                                <div class="input-group">
                                    <span class="input-group-text"><i class="bi bi-person"></i></span>
                                    {{ form_widget(form.prenom) }}
                                </div>
                                {{ form_errors(form.prenom) }}
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <div class="input-group">
                                    <span class="input-group-text"><i class="bi bi-person"></i></span>
                                    {{ form_widget(form.nom) }}
                                </div>
                                {{ form_errors(form.nom) }}
                            </div>
                        </div>
                    </div>

                    <div class="mb-3">
                        <div class="input-group">
                            <span class="input-group-text"><i class="bi bi-envelope"></i></span>
                            {{ form_widget(form.email) }}
                        </div>
                        {{ form_errors(form.email) }}
                    </div>

                    <div class="mb-3">
                        <div class="input-group">
                            <span class="input-group-text"><i class="bi bi-journal-text"></i></span>
                            {{ form_widget(form.biographie) }}
                        </div>
                        {{ form_errors(form.biographie) }}
                        <small class="text-muted">Facultatif - Cette information sera visible sur votre profil public</small>
                    </div>

                    <div class="mb-3">
                        <div class="input-group">
                            <span class="input-group-text"><i class="bi bi-lock"></i></span>
                            {{ form_widget(form.password.first) }}
                        </div>
                        {{ form_errors(form.password.first) }}
                    </div>

                    <div class="mb-4">
                        <div class="input-group">
                            <span class="input-group-text"><i class="bi bi-lock-fill"></i></span>
                            {{ form_widget(form.password.second) }}
                        </div>
                        {{ form_errors(form.password.second) }}
                    </div>

                    <div class="d-grid gap-2">
                        <button type="submit" class="btn btn-primary btn-lg">Créer mon compte</button>
                    </div>

                    {{ form_end(form) }}

                    <div class="mt-3 text-center">
                        <p class="mb-0">Déjà inscrit ? <a href="{{ path('app_login') }}" class="text-primary">Se connecter</a></p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}

{% block stylesheets %}
{{ parent() }}
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.7.2/font/bootstrap-icons.css">
<style>
    .card {
        border: none;
        border-radius: 10px;
    }
    .card-header {
        border-radius: 10px 10px 0 0 !important;
    }
    .input-group-text {
        background-color: transparent;
        border-right: none;
    }
    .form-control {
        border-left: none;
    }
    .form-control:focus {
        box-shadow: none;
        border-color: #ced4da;
    }
    .btn-primary {
        padding: 12px;
        font-weight: 500;
    }
    textarea.form-control {
        border: 1px solid #ced4da;
        border-left: none;
    }
    .text-muted {
        font-size: 0.85rem;
    }
</style>
{% endblock %}