{% extends 'base.html.twig' %}

{% block title %}{{ article.titre }}{% endblock %}

{% block body %}
<div class="container my-4">
    <div class="row">
        <div class="col-md-8 mx-auto">
            <div class="card shadow">
                {% if article.image %}
                    <img src="{{ asset('uploads/articles/' ~ article.image) }}" class="card-img-top" alt="Image de l'article">
                {% endif %}
                
                <div class="card-body">
                    <h1 class="card-title h2 mb-4">{{ article.titre }}</h1>
                    
                    <div class="mb-3">
                        <small class="text-muted">
                            <i class="bi bi-person me-1"></i> Par {{ article.auteur }}
                            <i class="bi bi-calendar ms-3 me-1"></i> 
                            {% if article.isPublished %}
                                Publié le {{ article.datePublication|date('d/m/Y') }}
                            {% else %}
                                Brouillon créé le {{ article.date_creation|date('d/m/Y') }}
                            {% endif %}
                        </small>
                    </div>

                    {% if article.category %}
                        <div class="mb-3">
                            <span class="badge bg-secondary me-1">{{ article.category.nom }}</span>
                        </div>
                    {% endif %}
                    
                    {% if article.isArchived %}
                        <div class="alert alert-warning mb-4">
                            <i class="bi bi-archive me-2"></i> Cet article est archivé
                        </div>
                    {% endif %}
                    
                    <div class="card-text mt-4">
                        {{ article.contenu|raw }}
                    </div>
                </div>

                <div class="card-footer bg-light">
                    <div class="d-flex justify-content-between align-items-center">
                        <div class="btn-group">
                            {% if not article.isArchived %}
                                <a href="{{ path('app_article_edit', {'slug': article.slug}) }}" class="btn btn-primary btn-sm">
                                    <i class="bi bi-pencil me-1"></i> Modifier
                                </a>
                                
                                {% if article.isDraft %}
                                    <a href="{{ path('app_article_publish', {'slug': article.slug}) }}" class="btn btn-success btn-sm">
                                        <i class="bi bi-paper-plane me-1"></i> Publier
                                    </a>
                                {% endif %}
                                
                                <a href="{{ path('app_article_archive', {'slug': article.slug}) }}" class="btn btn-warning btn-sm">
                                    <i class="bi bi-archive me-1"></i> Archiver
                                </a>
                            {% else %}
                                <a href="{{ path('app_article_restore', {'slug': article.slug}) }}" class="btn btn-info btn-sm">
                                    <i class="bi bi-arrow-counterclockwise me-1"></i> Restaurer
                                </a>
                            {% endif %}
                        </div>

                        <form action="{{ path('app_article_delete', {'slug': article.slug}) }}" method="post" onsubmit="return confirm('Êtes-vous sûr de vouloir supprimer cet article ? Cette action est irréversible.');">
                            <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ article.id) }}">
                            <button type="submit" class="btn btn-danger btn-sm">
                                <i class="bi bi-trash me-1"></i> Supprimer
                            </button>
                        </form>
                    </div>
                </div>
            </div>

            <div class="mt-4">
                <a href="{{ path('app_article_my_articles') }}" class="btn btn-outline-secondary">
                    <i class="bi bi-arrow-left me-1"></i> Retour à mes articles
                </a>
            </div>
        </div>
    </div>
</div>
{% endblock %}