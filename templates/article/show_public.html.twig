{% extends 'base.html.twig' %}

{% block title %}{{ article.titre }}{% endblock %}

{% block body %}
<div class="container my-4">
    <div class="row">
        <div class="col-md-8 mx-auto">
            {# En-tête de l'article avec image de couverture #}
            <div class="card shadow">
                {% if article.image %}
                    <div class="article-image-container" style="height: 400px; overflow: hidden;">
                        <img src="{{ asset('uploads/articles/' ~ article.image) }}" 
                             class="card-img-top" 
                             alt="Image de l'article"
                             style="width: 100%; height: 100%; object-fit: cover;">
                    </div>
                {% endif %}
                
                <div class="card-body">
                    {# En-tête avec titre et métadonnées #}
                    <div class="article-header mb-4">
                        <h1 class="card-title h2 mb-3">{{ article.titre }}</h1>
                        
                        <div class="d-flex align-items-center mb-3">
                            <div class="author-info">
                                <small class="text-muted">
                                    <i class="bi bi-person-circle me-1"></i> 
                                    Par <span class="fw-medium text-dark">{{ article.auteur }}</span>
                                </small>
                            </div>
                            <div class="date-info ms-3">
                                <small class="text-muted">
                                    <i class="bi bi-calendar me-1"></i> 
                                    Publié le <span class="text-dark">{{ article.datePublication|date('d/m/Y') }}</span>
                                </small>
                            </div>
                        </div>

                        {% if article.category %}
                            <div class="category-info">
                                <span class="badge bg-primary-subtle text-primary-emphasis">
                                    <i class="bi bi-bookmark me-1"></i>{{ article.category.nom }}
                                </span>
                            </div>
                        {% endif %}
                    
                    {# Contenu de l'article #}
                    <div class="article-content mt-4">
                        <div class="card-text content-wrapper lh-lg">
                            {{ article.contenu|raw }}
                        </div>
                    </div>

                    {# Section d'engagement (likes et commentaires) #}
                    <div class="engagement-section mt-5 border-top pt-4">
                        <div class="d-flex align-items-center justify-content-between">
                            <div class="d-flex align-items-center">
                                {% if app.user %}
                                    <form action="{{ path('app_article_like', {'slug': article.slug}) }}" method="post" class="me-3">
                                        <button type="submit" class="btn btn-outline-primary btn-sm px-3">
                                            <i class="bi bi-heart{% if article.likes|length > 0 %}-fill{% endif %} me-2"></i>
                                            <span class="fw-medium">{{ article.likes|length }}</span>
                                        </button>
                                    </form>
                                {% else %}
                                    <span class="text-muted me-3">
                                        <i class="bi bi-heart me-1"></i> {{ article.likes|length }} likes
                                    </span>
                                {% endif %}
                                
                                {# Affichage du nombre de vues uniques #}
                                <span class="text-muted me-3">
                                    <i class="bi bi-eye me-1"></i> {{ article.uniqueViewsCount }} vues
                                </span>
                            
                            <button type="button" class="btn btn-link text-decoration-none text-muted p-0" 
                                    onclick="toggleComments()" id="comments-toggle">
                                <i class="bi bi-chat me-1"></i>
                                <span id="comments-count">{{ article.comments|length }}</span> commentaires
                                <i class="bi bi-chevron-down ms-1" id="comments-icon"></i>
                            </button>
                        </div>
                    </div>
                </div>
            </div>

            {# Section des commentaires #}
            <div class="mt-4" id="comments-section" style="display: none;">
                <div class="card shadow-sm">
                    <div class="card-body">
                        <div class="comments-list">
                            {% include 'article/_comments.html.twig' with {
                                'comments': article.comments,
                                'commentForm': commentForm|default(null)
                            } %}
                        </div>
                    </div>
                </div>
            </div>

            <style>
            .new-comment-form {
                border-bottom: 1px solid #dee2e6;
                padding-bottom: 1.5rem;
            }
            #comments-toggle {
                transition: all 0.3s ease;
            }
            #comments-toggle:hover {
                color: #0d6efd !important;
            }
            #comments-icon {
                transition: transform 0.3s ease;
            }
            .rotate-icon {
                transform: rotate(180deg);
            }
            </style>

            <script>
            function toggleComments() {
                const section = document.getElementById('comments-section');
                const icon = document.getElementById('comments-icon');
                const isHidden = section.style.display === 'none';
                
                section.style.display = isHidden ? 'block' : 'none';
                if (isHidden) {
                    icon.classList.add('rotate-icon');
                    // Scroll jusqu'aux commentaires avec une animation douce
                    section.scrollIntoView({ behavior: 'smooth', block: 'start' });
                } else {
                    icon.classList.remove('rotate-icon');
                }
            }

            // Si l'URL contient #comments, afficher les commentaires
            if (window.location.hash === '#comments') {
                toggleComments();
            }
            </script>

            <div class="mt-4">
                <a href="{{ path('app_articles_publies') }}" class="btn btn-outline-primary">
                    <i class="bi bi-arrow-left me-1"></i> Retour aux articles
                </a>
            </div>
        </div>
    </div>
</div>
{% endblock %}