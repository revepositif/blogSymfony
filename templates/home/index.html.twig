{% extends 'base.html.twig' %}

{% block title %} Bienvenu sur - {{ parent() }}{% endblock %}

{% block body %}
<div class="container">
    <div class="text-center mb-5">
        <h1 class="display-4 fw-bold text-primary mb-4">{{ title }}</h1>
        <p class="lead fw-normal text-dark mb-4" style="font-size: 1.3rem;">Découvrez les derniers articles, partagez vos connaissances et échangez avec la communauté.</p>
        {% if not app.user %}
            <hr class="my-4">
            <p class="fs-5 text-primary-emphasis" style="font-weight: 500;">Rejoignez-nous dès maintenant pour participer à cette aventure.</p>
            <a class="btn btn-primary btn-lg" href="{{ path('app_articles_publies') }}" role="button">
                <i class="bi bi-journal-text"></i> Découvrir les articles
            </a>
        {% endif %}
    </div>

    <div class="row g-4">
        {% for article in articles %}
            <div class="col-md-4">
                <div class="card h-100 shadow-sm">
                    {% if article.image %}
                        <img src="{{ asset('uploads/articles/' ~ article.image) }}" 
                             class="card-img-top" 
                             alt="Image de l'article" 
                             style="height: 200px; object-fit: cover;">
                    {% endif %}
                    <div class="card-body">
                        <h5 class="card-title">{{ article.titre }}</h5>
                        <p class="card-text">{{ article.contenu|striptags|slice(0, 100) }}...</p>
                        <div class="text-muted small mb-2">
                            <i class="bi bi-person me-1"></i> {{ article.auteur }}
                            <i class="bi bi-calendar ms-2 me-1"></i> {{ article.datePublication|date('d/m/Y') }}
                        </div>
                    </div>
                    <div class="card-footer bg-transparent border-top-0">
                        <div class="d-flex justify-content-between align-items-center">
                            <div class="small text-muted">
                                <i class="bi bi-heart"></i> {{ article.likes|length }}
                                <i class="bi bi-chat ms-2"></i> {{ article.comments|length }}
                                <i class="bi bi-eye ms-2"></i> {{ article.uniqueViewsCount }}
                            </div>
                            <a href="{{ path('app_article_show', {'slug': article.slug}) }}" 
                               class="btn btn-outline-primary btn-sm">
                                Lire la suite
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        {% else %}
            <div class="col-12">
                <div class="text-center py-5">
                    <i class="bi bi-journal-text display-1 text-muted"></i>
                    <p class="mt-3">Aucun article publié pour le moment.</p>
                    {% if app.user %}
                        <a href="{{ path('app_article_new') }}" class="btn btn-primary">
                            <i class="bi bi-pencil"></i> Écrire un article
                        </a>
                    {% endif %}
                </div>
            </div>
        {% endfor %}
    </div>
</div>
{% endblock %}