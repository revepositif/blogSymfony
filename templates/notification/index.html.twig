{# templates/notification/index.html.twig #}
{% extends 'base.html.twig' %}

{% block title %}Mes notifications{% endblock %}

{% block body %}
<div class="container my-4">
    <div class="row">
        <div class="col-md-8 mx-auto">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h1>Mes notifications</h1>
                {% if notifications|length > 0 %}
                    <a href="{{ path('app_notifications_mark_all_read') }}" class="btn btn-primary">
                        <i class="bi bi-check-all"></i> Tout marquer comme lu
                    </a>
                {% endif %}
            </div>

            {% if notifications|length > 0 %}
                <div class="list-group">
                    {% for notification in notifications %}
                        <div class="list-group-item list-group-item-action">
                            <div class="d-flex w-100 justify-content-between">
                                <h6 class="mb-1">
                                    <strong>{{ notification.comment.auteur }}</strong> a répondu à votre commentaire
                                </h6>
                                <small class="text-muted">
                                    {{ notification.dateCreation|date('d/m/Y H:i') }}
                                </small>
                            </div>
                            <p class="mb-1">{{ notification.comment.contenu|slice(0, 100) }}...</p>
                            <a href="{{ path('app_article_show', {'slug': notification.comment.article.slug}) }}" class="btn btn-sm btn-outline-primary mt-2">
                                Voir le commentaire
                            </a>
                        </div>
                    {% endfor %}
                </div>
            {% else %}
                <div class="alert alert-info">
                    <i class="bi bi-info-circle me-2"></i> Vous n'avez aucune nouvelle notification.
                </div>
            {% endif %}
        </div>
    </div>
</div>
{% endblock %}